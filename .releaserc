{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "build/uart-web-bridge.bin",
            "name": "uart-web-bridge-${nextRelease.version}.bin"
          }
        ]
      }
    ],
    [
      "@semantic-release/exec",
      {
        "generateNotesCmd": "npm version ${nextRelease.version} --no-git-tag-version --prefix client || true"
      }
    ]
  ]
}
